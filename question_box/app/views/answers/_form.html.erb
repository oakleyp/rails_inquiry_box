<%= form_with(model: answer, local: true) do |form| %>
  <% if answer.errors.any? %>
    <div id="error_explanation">
			<h2><%= pluralize(answer.errors.count, "error") %>
			prohibited this book from being saved:</h2>
			
			<ul>
			<% answer.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
			</ul>
    </div>
  <% end %>

  <div class="field">
		<%= form.label :content %>
    <%= form.text_field :content, id: :answer_content %>
  </div>

  <div class="actions">
		<%= form.submit %>
  </div>

<% end %>