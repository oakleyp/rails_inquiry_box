<%= link_to 'Back', url_for(:back) %>
<h1 id="answers">Questions#show</h1>
<p><%= @question.title %></p>
<p><%= @question.content %></p>
<p><% @question.answers.each do |answer| %>
  <%= answer.content %>
  <%= "Answer Correct:" + answer.is_valid.to_s %></p>
<%end%>

<footer>
  <div class="footrow">
    <p>Copyright &copy; Rubeast Cohort 10 2017</p>
  </div>
</footer>


<h3>Add an answer</h3>
<%= form_for @answer do |form| %>
<%= form.label :content %>
    <%= form.text_field :content, id: :answer_content %>

		<%= form.hidden_field :question, :value => @question.id %>

		<%= form.submit %>
<% end %>
